#!/bin/sh

set -e

cd "$(dirname "$0")/.."

[ -z "$DEBUG" ] || set -x

export MIX_ENV="test"

script/bootstrap

echo "==> Setting up DB…"

mix ecto.ci

echo "==> App is now ready to go!"

echo "==> Checking format…"

mix format --check-formatted

echo "==> Running shellcheck…"

shellcheck script/*

# No need to run the credo linter in CI because we have an extra service installed that runs it
# separately

echo "==> Running tests…"

if [ -n "$TRAVIS" ]; then
  mix coveralls.travis
elif [ -n "$ACTIONS" ]; then
  message=$(jq --raw-output ".push.commits[-1].message" "$GITHUB_EVENT_PATH")

  mix coveralls.post --branch "$GITHUB_REF" --committer "$GITHUB_ACTOR" --name "actions" \
      --message "$message" --sha "$GITHUB_SHA"
else
  mix test
fi
